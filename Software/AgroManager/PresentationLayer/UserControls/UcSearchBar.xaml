<UserControl
    x:Class="PresentationLayer.UserControls.UcSearchBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="120"
    mc:Ignorable="d">
    <Border
        Background="LightGray"
        BorderBrush="Transparent"
        BorderThickness="1"
        CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="txtInput"
                Grid.Column="0"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                FocusVisualStyle="{x:Null}"
                FontSize="16"
                FontWeight="Light"
                Style="{StaticResource standardTextBox}"
                TextAlignment="Left"
                TextChanged="txtInput_TextChanged" />

            <TextBlock
                x:Name="tbPlaceholder"
                Grid.Column="0"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Panel.ZIndex="-1"
                FontSize="15"
                FontWeight="Light"
                Foreground="DarkGray"
                Style="{StaticResource standardTextBlock}"
                Text="{Binding Placeholder}" />

            <Button
                x:Name="btnOcisti"
                Grid.Column="1"
                Click="btnOcisti_Click"
                Content="X"
                Focusable="False"
                Style="{StaticResource BtnUcSearchBarClear}" />
        </Grid>
    </Border>
</UserControl>
