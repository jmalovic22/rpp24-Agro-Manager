<UserControl
    x:Class="PresentationLayer.UserControls.UcRadniNalogCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    Loaded="UserControl_Loaded"
    Style="{StaticResource CardStyleMouseOverEffect}"
    mc:Ignorable="d">

    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">

        <Grid Width="300" Height="350">

            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>

            <local:UcCardTemplate x:Name="UcCardPredlozak" />

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="20*" />
                    <RowDefinition Height="20*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="DocumentImage"
                        Grid.Column="1"
                        MouseDown="DocumentImage_MouseDown"
                        Source="/Images/iconDocument.png" />
                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="txtDatumKreiranja"
                    Grid.Row="1"
                    Content="Datum kreiranja"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtKrajnjiRok"
                    Grid.Row="2"
                    Content="Krajnji rok"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtPolje"
                    Grid.Row="3"
                    Content="Polje"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtStatus"
                    Grid.Row="4"
                    Content="Status"
                    Style="{StaticResource lblCardContent}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
