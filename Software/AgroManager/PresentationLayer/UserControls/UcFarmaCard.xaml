<UserControl
    x:Class="PresentationLayer.UserControls.UcFarmaCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    Loaded="UserControl_Loaded"
    Style="{StaticResource CardStyleMouseOverEffect}"
    mc:Ignorable="d">
    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">
        <Grid Width="300" Height="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="85*" />
            </Grid.RowDefinitions>
            <local:UcCardTemplate x:Name="UcCardPredlozak" Grid.Row="0" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="1"
                        MouseDown="Image_MouseDown"
                        Source="/Images/iconFarm2.png" />
                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="TxtLokacija"
                    Grid.Row="1"
                    Content="Lokacija"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtPovrsina"
                    Grid.Row="2"
                    Content="Povrsina"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtBrojZaposlenih"
                    Grid.Row="3"
                    Content="Broj zaposlenih"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtStatusFarme"
                    Grid.Row="4"
                    Content="Status"
                    Style="{StaticResource lblCardContent}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
