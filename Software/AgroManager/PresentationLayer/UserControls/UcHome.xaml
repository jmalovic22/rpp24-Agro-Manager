<UserControl
    x:Class="PresentationLayer.UserControls.UcHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush
                ImageSource="/Images/logoAgroManagerBlack.png"
                Opacity="0.1"
                Stretch="Uniform"
                TileMode="Tile"
                Viewbox="0,0,4.2,4.2"
                Viewport="0,0,200,200"
                ViewportUnits="Absolute">

                <ImageBrush.RelativeTransform>
                    <RotateTransform Angle="-45" CenterX="0.5" CenterY="0.5" />
                </ImageBrush.RelativeTransform>
            </ImageBrush>


        </Grid.Background>
        <Viewbox MaxWidth="1200" MaxHeight="650">

            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <Label
                            Content="Dobrodošli,"
                            FontSize="26"
                            Foreground="Black"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblImePrezime"
                            Content="ImePrezime"
                            FontSize="20"
                            Foreground="Black"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblOIB"
                            Content="OIB: "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblEmail"
                            Content="E-mail: "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblKategorije"
                            Content="Kategorije: "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label
                            x:Name="LblNazivPoduzeca"
                            Content="Poduzeće"
                            FontSize="26"
                            Foreground="Black"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblVlasnik"
                            Content="Vlasnik: "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblTelefon"
                            Content="Telefon : "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />

                        <Label
                            x:Name="LblEmailPoduzeca"
                            Content="E-mail: "
                            FontSize="14"
                            Foreground="Gray"
                            Style="{StaticResource lblNaslovStyle}" />
                    </StackPanel>
                </StackPanel>
                <Grid Height="300" Margin="80,0,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="85*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        Content="Resursi Poduzeća"
                        FontSize="24"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        MaxWidth="30"
                        MaxHeight="30"
                        Source="/Images/iconFarm2.png" />
                    <Label
                        x:Name="LblFarme"
                        Grid.Row="1"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Farma"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="2"
                        Grid.Column="0"
                        MaxWidth="30"
                        MaxHeight="30"
                        Source="/Images/iconProfileBlack.png" />
                    <Label
                        x:Name="LblZaposlenici"
                        Grid.Row="2"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Zaposlenici"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="3"
                        Grid.Column="0"
                        MaxWidth="30"
                        MaxHeight="30"
                        Source="/Images/iconSilos.png" />
                    <Label
                        x:Name="LblSilos"
                        Grid.Row="3"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Silos"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="4"
                        Grid.Column="0"
                        MaxWidth="30"
                        MaxHeight="30"
                        Source="/Images/iconFieldGrey.png" />
                    <Label
                        x:Name="LblPolje"
                        Grid.Row="4"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Polje"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="5"
                        Grid.Column="0"
                        MaxWidth="30"
                        MaxHeight="30"
                        Source="/Images/iconTractorBlack.png" />
                    <Label
                        x:Name="LblVozila"
                        Grid.Row="5"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Vozila"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />

                    <Image
                        Grid.Row="6"
                        Grid.Column="0"
                        MaxWidth="50"
                        MaxHeight="50"
                        Source="/Images/iconTrailer.png" />
                    <Label
                        x:Name="LblPrikljucak"
                        Grid.Row="6"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Content="Prikljucak"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource lblNaslovStyle}" />
                </Grid>
            </StackPanel>
        </Viewbox>
    </Grid>
</UserControl>
