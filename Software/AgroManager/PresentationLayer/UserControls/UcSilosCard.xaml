<UserControl
    x:Class="PresentationLayer.UserControls.UcSilosCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Loaded="UserControl_Loaded"
    Style="{StaticResource CardStyleMouseOverEffect}"
    Tag="{Binding Id}"
    mc:Ignorable="d">

    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">

        <Grid Width="300" Height="300">

            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>

            <local:UcCardTemplate x:Name="UcCardPredlozak" Grid.Row="0" />

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Border
                        x:Name="KapacitetBorder"
                        Width="100"
                        Height="{Binding PopunjenostPostotak}"
                        VerticalAlignment="Bottom"
                        Background="GreenYellow"
                        RenderTransformOrigin="0.5,1">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleY="1" />
                        </Border.RenderTransform>
                    </Border>

                    <Image
                        Width="100"
                        Height="100"
                        VerticalAlignment="Bottom"
                        Panel.ZIndex="1"
                        Source="/Images/iconSilos.png" />

                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="TxtPopunjenost"
                    Grid.Row="1"
                    Style="{StaticResource lblCardContent}" />

                <Label
                    x:Name="TxtUzgojnaKultura"
                    Grid.Row="2"
                    Style="{StaticResource lblCardContent}" />

                <Label
                    x:Name="TxtFarma"
                    Grid.Row="3"
                    Style="{StaticResource lblCardContent}" />

                <Label
                    x:Name="TxtDostupnost"
                    Grid.Row="4"
                    Style="{StaticResource lblCardContent}" />

            </Grid>
        </Grid>
    </Border>
</UserControl>