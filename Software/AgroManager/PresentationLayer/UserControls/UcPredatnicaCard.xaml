<UserControl
    x:Class="PresentationLayer.UserControls.UcPredatnicaCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">
        <Grid Width="300" Height="350">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="85*" />
            </Grid.RowDefinitions>
            <local:UcCardTemplate x:Name="UcCardPredlozak" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="PredatnicaImage"
                        Grid.Column="1"
                        MouseDown="PredatnicaImage_MouseDown"
                        Source="/Images/iconDocument.png" />
                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="txtDatum"
                    Grid.Row="1"
                    Content="Aktivna"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtKolicina"
                    Grid.Row="2"
                    Content="Aktivna"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtSilos"
                    Grid.Row="3"
                    Content="Aktivna"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtRegistracijaVozila"
                    Grid.Row="4"
                    Content="Aktivna"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="txtKorisnik"
                    Grid.Row="5"
                    Content="Aktivna"
                    Style="{StaticResource lblCardContent}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
