<UserControl
    x:Class="PresentationLayer.UserControls.UcPrikljucakCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    Loaded="UserControl_Loaded"
    Style="{StaticResource CardStyleMouseOverEffect}"
    mc:Ignorable="d">

    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">

        <Grid Width="300" Height="350">

            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="85*" />
            </Grid.RowDefinitions>

            <local:UcCardTemplate x:Name="UcCardPredlozak" Grid.Row="0" />

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="30*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="1" Source="/Images/iconTrailer.png" />
                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="TxtNaziv"
                    Grid.Row="1"
                    Content="Naziv"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtMarka"
                    Grid.Row="2"
                    Content="Marka"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtStatus"
                    Grid.Row="3"
                    Content="Status"
                    Style="{StaticResource lblCardContent}" />
                <Button
                    x:Name="BtnSpoji"
                    Grid.Row="4"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Center"
                    Click="BtnSpoji_Click"
                    Content="Spoji"
                    Style="{StaticResource BtnViewActionStyle}"
                    Visibility="Collapsed" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
