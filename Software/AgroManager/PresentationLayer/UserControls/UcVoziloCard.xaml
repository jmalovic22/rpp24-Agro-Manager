<UserControl
    x:Class="PresentationLayer.UserControls.UcVoziloCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="350"
    d:DesignWidth="300"
    Loaded="UserControl_Loaded"
    Style="{StaticResource CardStyleMouseOverEffect}"
    mc:Ignorable="d">

    <Border
        Background="LightGray"
        BorderThickness="0"
        CornerRadius="10">

        <Grid Width="300" Height="350">

            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="85*" />
            </Grid.RowDefinitions>

            <local:UcCardTemplate x:Name="UcCardPredlozak" Grid.Row="0" />

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="40*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="14*" />
                    <RowDefinition Height="25*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="ImageVozilo"
                        Grid.Column="1"
                        MouseDown="ImageVozilo_MouseDown"
                        Source="/Images/iconTractorBlack.png" />
                    <Separator
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="25,0,25,0"
                        VerticalAlignment="Bottom" />
                </Grid>

                <Label
                    x:Name="TxtRegistracija"
                    Grid.Row="1"
                    Content="Registracija"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtMarka"
                    Grid.Row="2"
                    Content="Marka"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtNaziv"
                    Grid.Row="3"
                    Content="Naziv"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtStatus"
                    Grid.Row="4"
                    Content="Status"
                    Style="{StaticResource lblCardContent}" />
                <Label
                    x:Name="TxtPrikljucak"
                    Grid.Row="5"
                    Content="Prikljucak"
                    Style="{StaticResource lblCardContent}" />
                <StackPanel
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="BtnZauzmi"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Click="BtnZauzmi_Click"
                        Content="Zauzmi"
                        Style="{StaticResource BtnViewActionStyle}" />
                    <Button
                        x:Name="BtnPrikljucak"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Click="BtnPrikljucak_Click"
                        Content="Prikljucak"
                        Style="{StaticResource BtnViewActionStyle}"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
