<Window
    x:Class="PresentationLayer.View.RadniNalogDodajStavkuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Dodavanje stavke"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />

            <StackPanel Grid.Row="1">
                <Label
                    Margin="0,0,130,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Razina prioriteta:"
                    FontSize="14"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox
                    x:Name="CmbRazinaPrioriteta"
                    Width="250"
                    Height="35"
                    Style="{StaticResource CustomComboBox}">
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                </ComboBox>

            </StackPanel>

            <StackPanel Grid.Row="2">
                <Label
                    Margin="0,0,200,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Posao:"
                    FontSize="14"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox
                    x:Name="CmbPosao"
                    Width="250"
                    Height="35"
                    ItemContainerStyle="{StaticResource CustomComboBoxItem}"
                    Style="{StaticResource CustomComboBox}" />
            </StackPanel>

            <UserControls:UcSearchBar
                x:Name="TxtNapomenaInput"
                Grid.Row="3"
                Width="250"
                Height="35"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Placeholder="Napomena" />

            <StackPanel Grid.Row="4">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Status:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <RadioButton
                    x:Name="RbAktivan"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Aktivan" />
                <RadioButton
                    x:Name="RbZavrsen"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Završen" />
            </StackPanel>

            <StackPanel
                Grid.Row="5"
                Width="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Margin="0,0,50,0"
                    Click="BtnSpremi_Click"
                    Content="Spremi"
                    Style="{StaticResource BtnViewActionStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Background="#902626"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource BtnViewActionStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
