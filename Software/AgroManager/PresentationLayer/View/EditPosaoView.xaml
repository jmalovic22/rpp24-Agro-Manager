<Window
    x:Class="PresentationLayer.View.EditPosaoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControl="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddPosaoView"
    Width="400"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="White" CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*" />
                <RowDefinition Height="20*" />
                <RowDefinition Height="20*" />
                <RowDefinition Height="25*" />
            </Grid.RowDefinitions>

            <Label
                Content="Uređivanje posla"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />

            <UserControl:UcSearchBar
                x:Name="TxtNazivInput"
                Grid.Row="1"
                Width="250"
                Margin="0,0,0,12"
                Placeholder="Naziv posla" />

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden">
                <UserControl:UcSearchBar
                    x:Name="TxtOpisInput"
                    Grid.Row="2"
                    Width="250"
                    Margin="0,0,0,12"
                    Placeholder="Opis" />
            </ScrollViewer>

            <StackPanel
                Grid.Row="3"
                Width="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Margin="0,0,50,0"
                    Click="BtnSpremi_Click"
                    Content="Spremi"
                    Style="{StaticResource BtnViewActionStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Background="#902626"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource BtnViewActionStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
