<Window
    x:Class="PresentationLayer.View.EditPrikljucakView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControl="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddPosaoView"
    Width="400"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="White" CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <Label
                Content="Uređivanje priključka"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />

            <UserControl:UcSearchBar
                x:Name="TxtRegistracijaInput"
                Grid.Row="1"
                Width="250"
                Margin="0,0,0,12"
                Placeholder="Registracija" />

            <StackPanel Grid.Row="2">
                <Label
                    Margin="0,0,200,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Vrsta:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox
                    x:Name="CmbVrsta"
                    Width="250"
                    Height="35"
                    ItemContainerStyle="{StaticResource CustomComboBoxItem}"
                    Style="{StaticResource CustomComboBox}" />
            </StackPanel>

            <UserControl:UcSearchBar
                x:Name="TxtMarkaInput"
                Grid.Row="3"
                Width="250"
                Margin="0,0,0,12"
                Placeholder="Marka" />

            <UserControl:UcSearchBar
                x:Name="TxtOpisInput"
                Grid.Row="4"
                Width="250"
                Margin="0,0,0,12"
                Placeholder="Opis" />

            <StackPanel
                Grid.Row="5"
                Width="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Margin="0,0,50,0"
                    Click="BtnSpremi_Click"
                    Content="Spremi"
                    Style="{StaticResource BtnViewActionStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Background="#902626"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource BtnViewActionStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
