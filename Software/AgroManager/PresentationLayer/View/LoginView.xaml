<Window
    x:Class="PresentationLayer.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginView"
    Width="1000"
    Height="650"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="/Images/LoginViewBackground.png" />
        </DockPanel.Background>

        <DockPanel Height="30" DockPanel.Dock="Top">

            <StackPanel
                Margin="0,5,5,5"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    x:Name="btnMinimize"
                    Click="btnMinimize_Click"
                    Content="-"
                    Style="{StaticResource btnWindowStyle}" />

                <Button
                    x:Name="btnClose"
                    Click="btnClose_Click"
                    Content="x"
                    Style="{StaticResource btnWindowStyle}" />

            </StackPanel>
        </DockPanel>

        <StackPanel Orientation="Horizontal">
            <Image
                x:Name="imgLogoQR"
                Height="350"
                Margin="50,0,50,0"
                Source="/Images/logoAgroManagerWhite.png" />

            <StackPanel Orientation="Vertical">
                <Label
                    Margin="0,150,0,0"
                    Content="KORISNIČKO IME"
                    Style="{StaticResource lblNaslovStyle}" />

                <TextBox x:Name="txtKorisnickoIme" Style="{StaticResource txtUsernameLoginStyle}">
                    <TextBox.Background>
                        <ImageBrush
                            AlignmentX="Left"
                            ImageSource="/Images/iconProfile.png"
                            Stretch="Uniform" />
                    </TextBox.Background>
                </TextBox>

                <Label
                    Margin="0,50,0,0"
                    Content="LOZINKA"
                    Style="{StaticResource lblNaslovStyle}" />

                <PasswordBox x:Name="txtLozinka" Style="{StaticResource pwdPasswordLoginStyle}">
                    <PasswordBox.Background>
                        <ImageBrush
                            AlignmentX="Left"
                            ImageSource="/Images/iconLock.png"
                            Stretch="Uniform" />
                    </PasswordBox.Background>
                </PasswordBox>

                <Label
                    x:Name="lblOTPkod"
                    Margin="0,50,0,0"
                    Content="OTP KOD"
                    Style="{StaticResource lblNaslovStyle}"
                    Visibility="Collapsed" />

                <TextBox
                    x:Name="txtOTPkod"
                    Style="{StaticResource txtUsernameLoginStyle}"
                    Visibility="Collapsed">
                    <TextBox.Background>
                        <ImageBrush
                            AlignmentX="Left"
                            ImageSource="/Images/iconLock.png"
                            Stretch="Uniform" />
                    </TextBox.Background>
                </TextBox>

                <Button
                    x:Name="btnLogin"
                    Margin="0,50,0,0"
                    Click="btnLogin_Click"
                    Content="LOGIN"
                    Style="{StaticResource btnLoginStyle}" />
            </StackPanel>
        </StackPanel>

    </DockPanel>

</Window>
