<Window
    x:Class="PresentationLayer.View.GreskaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControl="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddPosaoView"
    Width="400"
    Height="Auto"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border Background="White" CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Padding="25"
                FontSize="16"
                Style="{StaticResource lblCardContent}">
                <TextBlock
                    x:Name="TxtPoruka"
                    Height="Auto"
                    MaxWidth="350"
                    HorizontalAlignment="Stretch"
                    Text="GREŠKA"
                    TextAlignment="Center"
                    TextOptions.TextFormattingMode="Display"
                    TextWrapping="Wrap" />
            </Label>


            <Button
                x:Name="BtnOk"
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="#8f8f8f"
                Click="BtnOk_Click"
                Content="Ok"
                Style="{StaticResource BtnViewActionStyle}" />
        </Grid>
    </Border>
</Window>
