<Window
    x:Class="PresentationLayer.View.AddRadniNalogView2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditFarmaView"
    Width="550"
    Height="650"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="20*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Dodavanje radnog naloga"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />

            <StackPanel Grid.Row="1">
                <Label
                    Margin="0,0,150,0"
                    HorizontalAlignment="Center"
                    Content="Datum kreiranja:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <DatePicker
                    x:Name="DPdatumKreiranja"
                    Width="250"
                    Height="40"
                    VerticalContentAlignment="Center"
                    Style="{StaticResource CustomDatePickerStyle}" />
            </StackPanel>

            <StackPanel Grid.Row="2">
                <Label
                    Margin="0,0,180,0"
                    HorizontalAlignment="Center"
                    Content="Krajnji rok:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <DatePicker
                    x:Name="DPkrajnjiRok"
                    Width="250"
                    Height="40"
                    VerticalContentAlignment="Center"
                    Style="{StaticResource CustomDatePickerStyle}" />
            </StackPanel>

            <StackPanel Grid.Row="3">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Status:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <RadioButton
                    x:Name="RbAktivan"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Aktivan" />
                <RadioButton
                    x:Name="RbZavrsen"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Završen" />
            </StackPanel>

            <StackPanel Grid.Row="4">
                <Label
                    Margin="0,0,200,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="Polje:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox
                    x:Name="CmbPolje"
                    Width="250"
                    Height="35"
                    ItemContainerStyle="{StaticResource CustomComboBoxItem}"
                    Style="{StaticResource CustomComboBox}">
                </ComboBox>
            </StackPanel>

            <StackPanel
                Grid.Row="5"
                Width="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <Button
                    x:Name="BtnRadniNalogDodajZaposlenika"
                    Width="174"
                    Height="30"
                    Margin="0,0,100,0"
                    Padding="5"
                    HorizontalAlignment="Center"
                    Click="BtnRadniNalogDodajZaposlenika_Click"
                    Content="Dodaj zaposlenika"
                    Style="{StaticResource btnLoginStyle}" />

                <Button
                    x:Name="BtnRadniNalogDodajStavku"
                    Width="174"
                    Height="30"
                    Padding="5"
                    HorizontalAlignment="Center"
                    Click="BtnRadniNalogDodajStavku_Click"
                    Content="Dodaj stavku"
                    Style="{StaticResource btnLoginStyle}" />
            </StackPanel>

            <StackPanel
                Grid.Row="6"
                Width="470"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <ScrollViewer Margin="0,0,70,0" VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="StackPanelZaposlenici" />
                </ScrollViewer>

                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="StackPanelStavkeRadnogNaloga" />
                </ScrollViewer>
            </StackPanel>

            <StackPanel
                Grid.Row="7"
                Width="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Margin="0,0,50,0"
                    Click="BtnSpremi_Click"
                    Content="Spremi"
                    Style="{StaticResource BtnViewActionStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Background="#902626"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource BtnViewActionStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
