
<Window
    x:Class="PresentationLayer.View.AddFarmaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddFarmaView"
    Width="400"
    Height="300"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <Label
                Margin="0,8,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Content="Dodavanje farme"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />
            <UserControls:UcSearchBar
                Width="210"
                Height="30"
                Margin="0,65,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Placeholder="Lokacija" />

            <UserControls:UcSearchBar
                Width="210"
                Height="30"
                Margin="0,115,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Placeholder="Broj zaposlenih" />

            <UserControls:UcSearchBar
                Width="210"
                Height="30"
                Margin="0,165,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Placeholder="Povrsina" />

            <StackPanel
                Grid.Row="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="BtnSpremi_Click"
                    Content="Spremi"
                    Style="{StaticResource btnLoginStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Width="100"
                    Height="30"
                    Background="#902626"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource btnLoginStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
