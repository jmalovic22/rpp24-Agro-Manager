<Window
    x:Class="PresentationLayer.View.AddPredatnicaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControl="clr-namespace:PresentationLayer.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PresentationLayer.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddIzdatnicaView"
    Width="400"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Label
                Content="Kreiranje predatnice"
                FontSize="25"
                Style="{StaticResource lblCardContent}" />
            <StackPanel Grid.Row="1">
                <Label
                    Margin="70,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Datum predaje:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <DatePicker Width="250" HorizontalAlignment="Center" />
            </StackPanel>
            <UserControl:UcSearchBar
                Grid.Row="2"
                Width="250"
                Margin="0,0,0,12"
                Placeholder="kolicina u kg" />
            <StackPanel Grid.Row="3">
                <Label
                    Margin="70,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Silos:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox
                    x:Name="cmbSilos"
                    Grid.Row="3"
                    Width="250" />
            </StackPanel>
            <StackPanel Grid.Row="4">
                <Label
                    Margin="70,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Registracija vozila:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox x:Name="cmbRegistracijaVozila" Width="250" />
            </StackPanel>
            <StackPanel Grid.Row="5">
                <Label
                    Margin="70,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Zaposlenik:"
                    FontSize="13"
                    Style="{StaticResource lblCardContent}" />
                <ComboBox x:Name="cmbZaposlenik" Width="250" />
            </StackPanel>
            <ScrollViewer Grid.Row="6" VerticalScrollBarVisibility="Hidden">
                <UserControl:UcSearchBar
                    Grid.Row="6"
                    Width="250"
                    Margin="0,0,0,12"
                    Placeholder="Biljeske" />
            </ScrollViewer>
            <StackPanel
                Grid.Row="7"
                Width="250"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnSpremi"
                    Width="100"
                    Height="30"
                    Margin="0,0,50,0"
                    Content="Spremi"
                    Style="{StaticResource btnLoginStyle}" />
                <Button
                    x:Name="BtnOdustani"
                    Width="100"
                    Height="30"
                    Click="BtnOdustani_Click"
                    Content="Odustani"
                    Style="{StaticResource btnLoginStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
