<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="CustomDatePickerTextBoxStyle" TargetType="DatePickerTextBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
        <Setter Property="BorderBrush" Value="#648e5a" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="White" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Grid>
                        <Border
                            Padding="5"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <Grid>
                                <DatePickerTextBox
                                    x:Name="PART_TextBox"
                                    Padding="2"
                                    HorizontalAlignment="Stretch"
                                    Background="Transparent"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Style="{StaticResource CustomDatePickerTextBoxStyle}" />

                                <Button
                                    x:Name="PART_Button"
                                    Width="30"
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Right"
                                    Background="Transparent"
                                    BorderThickness="0">
                                    <TextBlock FontSize="16" Text="📅" />
                                </Button>
                            </Grid>
                        </Border>

                        <Popup
                            x:Name="PART_Popup"
                            IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                            Placement="Bottom"
                            StaysOpen="False">
                            <Border
                                Background="White"
                                BorderBrush="#648e5a"
                                BorderThickness="2"
                                CornerRadius="5">
                                <Calendar x:Name="PART_Calendar" />
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>